html(lang='en')
    head
        title Sign In
        meta(name='description', content='SignIN')
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/public/css/style.css')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous')
    body
        div(class='d-flex flex-column align-items-center mt-2')
            h1 Work and Financial Trends
            form(id='login' action='/signin' method='post')
                div(class='d-flex')
                    div(class='d-flex flex-column justify-content-center p-2')
                        label(class='my-auto mt-2') User Name
                        label(class='my-auto mt-2') Password
                    div(class='d-flex flex-column justify-content-center p-2')
                        input(type='text' id='username' class='my-auto mt-2' name='username' autocapitalize='none')
                        input(type='password' id='password' class='my-auto mt-2' name='password')
                div(class='d-flex flex-column align-items-center')
                    input(type='submit' class='btn btn-primary w-75' value='Sign In')
                    label #{message}